#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window

FloatLayout:
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'data/images/background.jpg'
            size: self.size

    BoxLayout:
        padding: 10
        spacing: 10
        size_hint: 1, None
        pos_hint: {'top': 1}
        height: 44
        Label:
            height: 24
            text_size: self.width, None
            color: (1, 1, 1, .8)
            text: 'TableTalk Prototype'

<Picture>:
    # each time a picture is created, the image can delay the loading
    # as soon as the image is loaded, ensure that the center is changed
    # to the center of the screen.
    on_size: self.center = win.Window.center
    size: image.size
    size_hint: None, None

    AsyncImage:
        id: image
        source: root.source

        # create initial image to be 400 pixels width
        size: 800, 800 / self.image_ratio

        # add shadow background
        canvas.before:
            Color:
                rgba: (1, 1, 1, 1) 
            BorderImage:
                source: 'shadow32.png'
                border: (36,36,36,36)
                size:(self.width+72, self.height+72)
                pos: (-36,-36)
    Label:
        size: self.texture_size
        color: (0, 0, 0, 1)
        text: root.topic + ": " + root.sentiment
		
	Button:
		text: 'x'
		font_size: 32
		size: self.texture_size
		color: (0,0,0,0)
		on_press: root.delete(widget=root)
