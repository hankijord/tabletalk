#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window

FloatLayout:
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'data/images/background.jpg'
            size: self.size 

    BoxLayout:
        padding: 10
        spacing: 10
        size_hint: 1, None
        pos_hint: {'top': 1}
        height: 44
    
<Picture>:
    # each time a picture is created, the image can delay the loading
    # as soon as the image is loaded, ensure that the center is changed
    # to the center of the screen.

    on_size: self.center = self.get_pos()
    size: image.size
    size_hint: None, None

    AsyncImage:
        id: image
        source: root.source

        # create initial image to be 400 pixels width
        size: 800, 800 / self.image_ratio

        # add shadow background
        canvas.before:
            Color:
                rgba: (1, 1, 1, 1) 
            BorderImage:
                source: 'shadow32.png'
                border: (36,36,36,36)
                size:(self.width+72, self.height+72)
                pos: (-36,-36)
    Label:
        text_size: self.size
        size: (root.width, 50)
        pos: (70, root.height - self.height) 
        color: (0, 0, 0, 1)
        font_name: 'HelveticaNeue.dfont'
        font_hinting: 'light'
        text: root.keyword
		
	Button:
        background_normal: 'images/delete.png'
		size: (50, 50) 
        border: (0, 0, 0, 0)
		on_press: root.delete(widget=root)
        pos: (25 + root.width - self.width, 25 + root.height - self.height)

    Image:
        source: root.get_emoji() 
        size: (50, 50)
        pos: (10, root.height - self.height - 10)
